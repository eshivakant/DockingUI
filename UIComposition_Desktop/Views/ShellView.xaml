    <ribbon:DXRibbonWindow.Resources>
        <utils:ModuleTemplateSelector x:Key="ModuleTemplateSelector"/>

        <Style  x:Key="ModuleTemplateSelectorTemplates" TargetType="{x:Type dxd:DockLayoutManager}">
            <Setter Property="ItemTemplateSelector" Value="{StaticResource ModuleTemplateSelector}"/>
            <Setter Property="utils:ModuleTemplateSelector.Templates">
                <Setter.Value>
                    <utils:TemplateCollection>
                        <utils:Template DataTemplate="{StaticResource DealTemplate}" Value="{x:Type Merges:DealMerge}"></utils:Template>
                        <utils:Template DataTemplate="{StaticResource ShipmentTemplate}"  Value="{x:Type Merges:ShipmentMerge}"></utils:Template>
                    </utils:TemplateCollection>
                </Setter.Value>
            </Setter>
        </Style>

        <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"></dx:BoolToVisibilityConverter>
    </ribbon:DXRibbonWindow.Resources>

    <DockPanel>
        <ribbon:RibbonControl DockPanel.Dock="Top" RibbonStyle="Office2010">
            <ribbon:RibbonControl.ApplicationMenu>
                <ribbon:BackstageViewControl>
                    <ribbon:BackstageTabItem Content="Last documents">
                        <ribbon:BackstageTabItem.ControlPane>
                            <Grid/>
                        </ribbon:BackstageTabItem.ControlPane>
                    </ribbon:BackstageTabItem>
                    <ribbon:BackstageTabItem Content="Properties">
                        <ribbon:BackstageTabItem.ControlPane>
                            <Grid/>
                        </ribbon:BackstageTabItem.ControlPane>
                    </ribbon:BackstageTabItem>
                    <ribbon:BackstageButtonItem Content="Close" Glyph="{dx:DXImage Image=Close_32x32.png}"/>
                </ribbon:BackstageViewControl>
            </ribbon:RibbonControl.ApplicationMenu>
            <ribbon:RibbonControl.ToolbarItems>
                <dxb:BarButtonItemLink BarItemName="biOpen"/>
                <dxb:BarButtonItemLink BarItemName="biNew"/>
            </ribbon:RibbonControl.ToolbarItems>
            <ribbon:RibbonDefaultPageCategory>
                <ribbon:RibbonPage Caption="Home">
                    <ribbon:RibbonPageGroup Caption="File">
                        <dxb:BarButtonItem x:Name="biOpen" Content="Open" Glyph="{dx:DXImage Image=Open_16x16.png}" LargeGlyph="{dx:DXImage Image=Open_32x32.png}"/>
                        <dxb:BarButtonItem x:Name="biNew" Content="New" Glyph="{dx:DXImage Image=New_16x16.png}" LargeGlyph="{dx:DXImage Image=New_32x32.png}"/>
                    </ribbon:RibbonPageGroup>
                </ribbon:RibbonPage>
            </ribbon:RibbonDefaultPageCategory>
        </ribbon:RibbonControl>
        <ribbon:RibbonStatusBarControl DockPanel.Dock="Bottom"/>
        <Grid>
            <dxd:DockLayoutManager FloatingMode="Desktop" ItemsSource="{Binding Path=Modules}" Style="{StaticResource ModuleTemplateSelectorTemplates}">
                <dxd:LayoutGroup>
                    <dxd:LayoutGroup Name="PanelHost" DestroyOnClosingChildren="False"/>
                    <dxd:DocumentGroup Name="DocumentHost" DestroyOnClosingChildren="False" />
                </dxd:LayoutGroup>
            </dxd:DockLayoutManager>
        </Grid>
    </DockPanel>



</ribbon:DXRibbonWindow>